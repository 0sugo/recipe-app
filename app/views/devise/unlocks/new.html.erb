<h2 class='center-text'>Resend unlock instructions</h2>

<div class='edit-form-container'>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'title-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions", class: 'in-out' %>
    </div>
  <% end %>
</div>


<%= render "devise/shared/links" %>
