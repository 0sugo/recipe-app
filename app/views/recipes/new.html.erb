<% if flash[:error] %>
  <div class="error-message">
    <%= flash[:error] %>
  </div>
<% end %>

<h2 class='center-text'>Add a recipe</h2>
<%= link_to 'Back', recipes_path %>
<div class='edit-form-container'>
  <%= form_with(model: @recipe, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "title-input", placeholder: 'Enter recipe name here...', required: true %>
    </div>

    <div class="field">
      <%= form.label :preparation_time %>
      <%= form.text_field :preparation_time, class: "title-input", placeholder: 'eg: 1 hour', required: true %>
    </div>

    <div class="field">
      <%= form.label :cooking_time %>
      <%= form.text_field :cooking_time, class: "title-input", placeholder: 'eg: 30 mins', required: true %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class: "text-area", required: true %>
    </div>

    <div class="actions">
      <%= form.submit "Add recipe", class: "in-out" %>
    </div>
  <% end %>
</div>
